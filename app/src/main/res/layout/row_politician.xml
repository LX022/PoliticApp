<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/partyNameField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/logo"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/logo"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        tools:text="Designation" />

    <TextView
        android:id="@+id/description"
        android:layout_width="223dp"
        android:layout_height="56dp"
        android:layout_alignLeft="@+id/partyNameField"
        android:layout_below="@+id/partyNameField"
        android:textColor="@android:color/black"
        tools:text="DÃ©tails" />


    <TextView
        android:id="@+id/partyShortName"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/description"
        android:layout_alignTop="@+id/designation"
        android:text="parti"
        />


    <ImageButton
        android:id="@+id/viewButton"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/partyNameField"
        android:layout_marginEnd="97dp"
        android:background="@android:color/transparent"
        android:onClick="votingObjectDetails"
        app:srcCompat="@android:drawable/ic_menu_view" />

    <ImageView
        android:id="@+id/editButton"
        android:onClick="editVotingObject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/partyNameField"
        android:layout_marginStart="-97dp"
        android:layout_toEndOf="@+id/viewButton"
        app:srcCompat="@android:drawable/ic_menu_edit" />

    <ImageButton
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="31dp"
        android:layout_marginTop="19dp"
        android:background="@android:color/transparent"
        android:onClick="deleteVotingObject"
        app:srcCompat="@android:drawable/ic_delete" />

</RelativeLayout>